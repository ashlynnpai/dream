<div class="container main">
  <%= render 'shared/messages' %>
  <h1><%= @user.username %></h1>
  <br />
  <br />
  <h2>Bucket List</h2>
  <br />
  <% if @buckets.empty? %>
    <h4> No places yet. </h4>
  <% else %>  
     <% @buckets.each do |bucket| %>
       <div class="booyah-box">
         <%= bucket.place.name %>
       </div>  
     <% end %>
  <% end %>
 
  <br />
  <h2>Completed</h2>
  <br />
  <% if @completed_buckets.empty? %>
    <h4> No places yet. </h4>
  <% else %>  
     <% @completed_buckets.each do |bucket| %>
       <div class="booyah-box">
         <%= bucket.place.name %>
       </div>  
     <% end %>
  <% end %>
  
  <br />
  <h2>Comments</h2>
  <br />
  <% if @comments.empty? %>
    <h4> No places yet. </h4>
  <% else %>  
     <% @comments.each do |comment| %>
       <div class="booyah-box">
         <%= comment.place.name %>
         <%= comment.rating %>
         <%= comment.message %>
       </div>  
     <% end %>
  <% end %>
</div>  