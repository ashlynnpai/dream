<div class="container main">
  <%= render 'shared/messages' %>
  <div class="col-xs-10 col-xs-offset-1">
    <h1>Done!</h1>
    <h2>Checked it off the bucket list.</h2>  
  </div>

  <% @buckets.each do |bucket| %>
    <div class="booyah-box col-xs-10 col-xs-offset-1">
      <%= bucket.place.name %>
      <%= link_to 'Remove from list', completed_bucket_path(bucket, bucket: {id: bucket.id, place_id: bucket.place.id, user_id: current_user.id}), method: :delete %>
    </div>
  <% end %>
</div>  
